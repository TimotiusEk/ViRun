<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood"
    android:gravity="center_horizontal"
    android:padding="10dp"
    tools:context="com.example.timotiusek.runcompanionvr.Activity.HomeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- HOME -"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/navigate_cardview"
        android:onClick="comingSoon">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/light_wood_texture"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_earth"
                android:layout_centerVertical="true"
                android:id="@+id/ic_earth"
                android:layout_marginStart="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAVIGATE"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/ic_earth"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/warp_me_cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/light_wood_texture"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow"
                android:layout_centerVertical="true"
                android:id="@+id/ic_arrow"
                android:layout_marginStart="40dp"
                android:rotation="90"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WARP ME"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/ic_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/vr_mode_cardview"
        android:onClick="comingSoon">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/light_wood_texture"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_360"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/store_cardview"
            android:layout_alignEnd="@+id/screen_center"
            android:layout_marginEnd="10dp"
            android:onClick="comingSoon">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dotted">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/light_wood_texture"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/basket_cart_icon_27"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/ic_store"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STORE"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/ic_store"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/screen_center"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/stats_cardview"
            android:layout_alignStart="@+id/screen_center"
            android:layout_marginStart="10dp"
            android:onClick="comingSoon">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dotted">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/light_wood_texture"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pie_chart_png_image_68797"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/ic_stats"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATISTICS"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/ic_stats"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="[PROTOTYPE]"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


</LinearLayout>
